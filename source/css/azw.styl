//////////////////////////////////////////////////////
// 
// constants
// 
//////////////////////////////////////////////////////
header-height=250px
sider-width=300px
content-width=800px
base-font=18px Verdana, Geneva, sans-serif
line-height=1.8em
article-padding = 10px
font-size = 14px
//////////////////////////////////////////////////////
// 
// header
// 
//////////////////////////////////////////////////////
*
    margin: 0;
    padding: 0;
    border: 0;
    outline: 0;
    font-size: 100%;
    vertical-align: baseline;
    background: transparent;
body
    font: base-font
    line-height: line-height
    color: #303030
h1,h2,h3,h4
    padding-top: 1em
img
    width: 100%
    height: auto
    
#header
    height: header-height
    background: url("images/header.png")
    background-repeat: no-repeat
    background-position: center
    
.site-title
    padding-top: 2em
    text-align: center
    font-size: 40px
    font-weight: bold
    color: whitesmoke

.site-subtitle
    padding-top: 1em
    text-align: center
    font-weight: bold
    color: whitesmoke

    
.post-title
    padding-top: 1em
    font-size: 40px
    font-weight: bold
    line-height: 1.2em
    text-align: center
    color: whitesmoke

.post-header-wrapper
    display: flex
    justify-content: center
    align-items: flex-end
    .post-header
        width: 90%
        .post-meta
            padding-top: 2em
            color: whitesmoke

.post-header
    padding-bottom: 2em

ul.title-menu
    display: flex
    justify-content: center
    list-style: none
    // color: dimGray
    li
        color: whitesmoke
        padding: 0 1em


//////////////////////////////////////////////////////
// 
// content
// 
//////////////////////////////////////////////////////
#content-wrapper
    display: flex
    justify-content: center

#content
    width: content-width
    padding: 0.5em
    p
        text-indent: 2em
        padding-bottom: 0.5em
    blockquote
        background: whitesmoke

#side-nav
    display:none
    background-color: #F8F8F8 
    width: sider-width

li.index
    padding: 0.5em 0.5em
    list-style-type: none
    
li.toc-item
    padding-bottom: 0.5em
    
.index-title
    padding: 0.5em 0
    font-size: 1.5em

a.nav, a.category-list-link, a.tag-list-link, a.archive-list-link, a.toc-link
    text-decoration: none
    color: inherit
    margin: 0 2px
    &:hover
        border-bottom: inset

.post-meta
    display: flex
    color: gray

.post-date
    padding-right: 2em


.tag
    border-left: 1px dotted lightGray
    padding: 0 0.2em
    &:last-child
        border-right: 1px dotted lightGray

//////////////////////////////////////////////////////
// 
// sider
// 
//////////////////////////////////////////////////////
#side-nav
    padding: 0.5em

.widget-title
    font-weight: bold
    border-bottom: inset

.category-list, .category-list-child, .archive-list
    font-size: 0.9em
    list-style: none
    padding-left: 0.5em


ol.toc, ol.toc-child
    list-style: none
    padding-left: 0
    li
        text-indent: -1em
        padding-left: 1.5em

ul.tag-list
    font-size: 0.9em
    padding-left: 0.5em
    list-style: none
    display: flex
    flex-wrap: wrap
    li
        margin: 2px 10px 2px 0

span[class$="list-count"]
    &:before
        content: ' ('
    &:after
        content: ')'

//////////////////////////////////////////////////////
// 
// page navigator
// 
//////////////////////////////////////////////////////
nav.page-navigator
    span, a
        display: inline-block
        padding: 5px 10px
        margin: 5px
        //border: solid 1px
    a
        // background-color: Wheat

//////////////////////////////////////////////////////
// 
// code highlight        
// 
//////////////////////////////////////////////////////
figure
    border-left: 5px solid #6699ff
    overflow-x: scroll
    background-color: #f0
    font-size: font-size
    line-height: 1.5em
    padding: 0
    margin: 0
    td.gutter
        text-align: right
        color: lightGray
        padding: 0 0.5em
        border-right: double lightGray
        
#gotopButton
    display: none
    height: 3em
    width: 3em
    position: fixed
    bottom: 20px
    right: 60px
    z-index: 99
    border: none
    outline: none
    background-color: steelBlue
    color: white
    cursor: pointer
    border-radius: 50%
    font-weight: bold
    transform: rotate(-90deg)
    
@media only screen and (max-width: 800px)
    #content
        width: 95%

    // since the .post-header style was defined under .post-header-wrapper, 
    // we have to also specify this cascade to overwrite it. This may be a 
    // bug or feather of css
    .post-header-wrapper
        .post-header
            width: 95%

