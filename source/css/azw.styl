header-height=200px
sider-width=300px
content-width=800px
base-font=16px Verdana, Geneva, sans-serif
line-height=1.6em
font-size = 16px
article-padding = 10px

html
  margin: 0

body
  margin: 0
  font: base-font
  line-height: line-height
  
figure
  overflow-x: scroll
  background-color: #f0f0f0
  padding: 0
  margin: 0
  td.gutter
    background-color: lightGray
    text-align: right
    padding: 0 0.5em
    
#header
  height: header-height
  
.site-title
  padding-top: 1em
  text-align: center
  font-size: 60px
  font-weight: bold
  
.post-title
  font-size: 40px
  font-weight: bold
  line-height: 1.2em

.post-header-wrapper
  display: flex
  justify-content: center
  align-items: flex-end
  .post-header
    width: 1100px
    .post-meta
      padding-top: 2em

.post-header
  padding-bottom: 2em

ul.title-menu
  display: flex
  justify-content: center
  list-style: none
  color: dimGray
  li
    padding: 0 1em


#content-wrapper
  display: flex
  justify-content: center

#content
  width: content-width
  padding: 0.5em

#side-nav
  background-color: #F8F8F8 
  width: sider-width

li.index
  padding: 2em 0.5em
  list-style-type: none
  
li.toc-item
  padding-bottom: 0.5em
  
.index-title
  padding: 0.5em 0
  font-size: 1.5em

a.nav, a.category-list-link, a.tag-list-link, a.archive-list-link, a.toc-link
  text-decoration: none
  color: inherit
  margin: 0 2px
  &:hover
    border-bottom: inset

.post-meta
  display: flex
  color: dimGray

.post-date
  padding-right: 2em


.tag
  border-left: dotted 1px
  padding: 0 0.2em
  &:last-child
    border-right: dotted 1px 

#side-nav
  padding: 0.5em

.widget-title
  font-weight: bold
  border-bottom: inset


.category-list, .category-list-child, .archive-list
  font-size: 0.9em
  list-style: none
  padding-left: 0.5em

ul.tag-list
  font-size: 0.9em
  padding-left: 0.5em
  list-style: none
  display: flex
  flex-wrap: wrap
  li
    margin: 2px 10px 2px 0

span[class$="list-count"]
  &:before
    content: ' ('
  &:after
    content: ')'

nav.page-navigator
  span, a
    display: inline-block
    padding: 5px 10px
    margin: 5px
    border: solid 1px
  a
    background-color: Wheat
    
@import highlight
